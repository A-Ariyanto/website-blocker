{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0",
  "description": "Block distracting websites to improve productivity",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Website Blocker",
    "default_icon": {
      "16": "site_blocker_icon_16.png",
      "32": "site_blocker_icon_32.png",
      "48": "site_blocker_icon_48.png",
      "128": "site_blocker_icon_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "site_blocker_icon_16.png",
    "32": "site_blocker_icon_32.png",
    "48": "site_blocker_icon_48.png",
    "128": "site_blocker_icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
